<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/box1"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="1"
        android:textSize="20sp"
        android:background="#F44336"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/box2"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="2"
        android:textSize="20sp"
        android:background="#E91E63"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/box3"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="3"
        android:textSize="20sp"
        android:background="#9C27B0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/box4"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="4"
        android:textSize="20sp"
        android:background="#2196F3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/box5"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.35"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box1" />
    <TextView
        android:id="@+id/box6"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="6"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/box5" />
    <TextView
        android:id="@+id/box7"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="7"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        app:layout_constraintEnd_toEndOf="@id/box5"
        app:layout_constraintStart_toStartOf="@id/box5"
        app:layout_constraintTop_toBottomOf="@id/box5"
        app:layout_constraintBottom_toTopOf="@id/box3" />
    <TextView
        android:id="@+id/box8"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="8"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#4CAF50"
        app:layout_constraintStart_toStartOf="@id/box6"
        app:layout_constraintEnd_toEndOf="@id/box4"
        app:layout_constraintTop_toTopOf="@id/box7"
        app:layout_constraintBottom_toTopOf="@id/box4"
        />


</androidx.constraintlayout.widget.ConstraintLayout>